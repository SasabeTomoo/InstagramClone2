<p id="notice"><%= notice %></p>

<h2>投稿一覧</h2>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>画像</th>
      <th>タイトル</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <td><%= image_tag feed.image.url %></td>
        <td><%= feed.title %></td>
        <td><%= feed.content %></td>
        <td><%= link_to 'Show', feed %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
  <p><%= link_to '新規投稿へ', new_feed_path %></P>
<% end %>
