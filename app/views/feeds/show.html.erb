<p id="notice"><%= notice %></p>
  <h4>投稿者  : <%= @feed.user.name %></h4>
  <h4>タイトル: <%= @feed.title %></h4>
  <h4>内容    : <%= @feed.content %></h4>
<p>
  <%= image_tag @feed.image.url %>
</p>
<% if current_user.id == @feed.user_id %>
  <td><%= link_to 'Edit', edit_feed_path(@feed) %>
  <td><%= link_to 'Destroy', feed_path(@feed.id), method: :delete, data: { confirm: '削除して大丈夫ですか?' } %></td>
<% end %>
<%= link_to 'Back', feeds_path %>

<% unless @feed.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
